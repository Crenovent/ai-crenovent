# Database Configuration
DATABASE_URL=postgresql://username:password@host:5432/database

# Azure OpenAI Configuration (from AI Foundry)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=localhost
LOG_LEVEL=INFO

# PostgreSQL Connection
POSTGRES_HOST=your_postgres_host
POSTGRES_DB=your_database
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_PORT=5432

# Microsoft Fabric SQL Connection
FABRIC_SQL_SERVER=your_fabric_server
FABRIC_SQL_DATABASE=your_database
FABRIC_TRUST_SERVER_CERT=yes
FABRIC_SQL_REQUEST_TIMEOUT_MS=120000
FABRIC_SQL_CONN_TIMEOUT_MS=60000

# Agent Feature Flags
ENABLE_RPA_AUTOMATION=true
ENABLE_FORM_MONITORING=true
ENABLE_CRUD_OPERATIONS=true
ENABLE_CONVERSATION_MEMORY=true

# Agent Performance Settings
AGENT_RESPONSE_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=10
RPA_TIMEOUT=60

# Form Monitor Agent Configuration
FORM_SUGGESTION_LIMIT=5
PATTERN_MEMORY_SIZE=20
AUTO_COMPLETION_THRESHOLD=2

# CRUD Agent Configuration
CRUD_CONFIRMATION_REQUIRED=true
CRUD_OPERATION_TIMEOUT=15

# Conversation Agent Configuration
CONVERSATION_WINDOW_SIZE=20
CONVERSATION_SUMMARY_THRESHOLD=15
SESSION_CLEANUP_HOURS=24

# Real-time Features
ENABLE_REAL_TIME_SUGGESTIONS=true
SUGGESTION_CONFIDENCE_THRESHOLD=0.5
CONTEXT_ANALYSIS_DEPTH=5

# Email Configuration (for RPA automation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@company.com
SMTP_PASSWORD=your_email_password

# Azure Service Principal for Fabric Authentication
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
AI_SERVICE_URL=http://localhost:8000

# Integration with Node.js Backend
NODEJS_BACKEND_URL=http://localhost:3001
BACKEND_BASE_URL=http://localhost:3001

# Environment Configuration
ENVIRONMENT=local

# Vector Search Configuration
MAX_SEARCH_RESULTS=5
SIMILARITY_THRESHOLD=0.01
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=raw-data

DSL_EVIDENCE_RETENTION_DAYS=2555
DSL_DEFAULT_TRUST_THRESHOLD=0.70